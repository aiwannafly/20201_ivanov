<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox fx:id="menu" alignment="CENTER"
      spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.games.tanks2d.FXMLLevels">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button onAction="#onLevelOneClick" prefHeight="75.0"
            prefWidth="240.0" text="LEVEL 1">
        <VBox.margin>
            <Insets right="1000.0" top="300.0"/>
        </VBox.margin>
        <font>
            <Font size="48.0"/>
        </font>
    </Button>
    <Button onAction="#onLevelTwoClick" prefHeight="75.0"
            prefWidth="240.0" text="LEVEL 2">
        <VBox.margin>
            <Insets right="1000.0" top="50.0"/>
        </VBox.margin>
        <font>
            <Font size="48.0"/>
        </font>
    </Button>
    <Button onAction="#onBackClick" prefHeight="75.0"
            prefWidth="240.0" text="BACK" fx:id="backButton">
        <VBox.margin>
            <Insets right="1000.0" top="50.0"/>
        </VBox.margin>
        <font>
            <Font size="48.0"/>
        </font>
    </Button>
</HBox>
